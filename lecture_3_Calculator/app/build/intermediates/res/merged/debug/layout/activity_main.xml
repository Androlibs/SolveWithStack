<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="@color/blue_black"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="right"
    tools:context="com.example.uddishverma.lecture_3_calculator.MainActivity">

   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/tv_result"
       android:height="45dp"
       android:background="@color/sea"
       android:text=""
       android:gravity="right"
       android:textColor="@android:color/black"
       android:textSize="30dp"
       android:textAlignment="gravity"/>

   <EditText
       android:id="@+id/et_var1"
       android:inputType="numberDecimal"
       android:layout_width="150dp"
       android:layout_height="wrap_content"
       android:layout_marginTop="20dp"
       android:gravity="right"
       android:textAlignment="gravity"
       android:textColor="@android:color/white"
       android:layout_below="@+id/tv_result"
       android:layout_alignRight="@+id/containerButtons1"
       android:layout_alignEnd="@+id/containerButtons1" />

    <LinearLayout
        android:id="@+id/containerButtons1"
        android:layout_below="@id/et_var1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cadetblue"
        android:layout_marginTop="20dp">


        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/btn_7"
            android:textColor="@android:color/white"
            android:text="7"
            android:textSize="40dp"
            android:background="@color/cadetblue"
            android:layout_height="80dp" />

        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/btn_8"
            android:textColor="@android:color/white"
            android:background="@color/cadetblue"
            android:text="8"
            android:textSize="40dp"
            android:layout_height="80dp" />

        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/btn_9"
            android:textColor="@android:color/white"
            android:background="@color/cadetblue"
            android:text="9"
            android:textSize="40dp"
            android:layout_height="80dp" />

        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/btn_clear"
            android:textColor="@android:color/black"
            android:text="C"
            android:textSize="40dp"
            android:background="@color/cadetblue"
            android:layout_height="80dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/containerButtons2"
        android:layout_below="@id/containerButtons1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/rain"
        android:layout_marginTop="10dp">

        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/btn_4"
            android:textSize="40dp"
            android:background="@color/rain"
            android:textColor="@android:color/white"
            android:text="4"
            android:layout_height="80dp" />

        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/btn_5"
            android:text="5"
            android:textSize="40dp"
            android:background="@color/rain"
            android:textColor="@android:color/white"
            android:layout_height="80dp" />

        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/btn_6"
            android:textSize="40dp"
            android:background="@color/rain"
            android:textColor="@android:color/white"
            android:text="6"
            android:layout_height="80dp" />

        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/btn_div"
            android:textSize="40dp"
            android:background="@color/rain"
            android:textColor="@android:color/black"
            android:text="รท"
            android:layout_height="80dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/containerButtons3"
        android:layout_below="@id/containerButtons2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:layout_marginTop="10dp">

        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/btn_1"
            android:textSize="40dp"
            android:background="@color/green"
            android:textColor="@android:color/white"
            android:text="1"
            android:layout_height="80dp" />

        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/btn_2"
            android:background="@color/green"
            android:textColor="@android:color/white"
            android:text="2"
            android:textSize="40dp"
            android:layout_height="80dp" />

        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/btn_3"
            android:textSize="40dp"
            android:background="@color/green"
            android:textColor="@android:color/white"
            android:text="3"
            android:layout_height="80dp" />

        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/btn_mul"
            android:background="@color/green"
            android:textColor="@android:color/black"
            android:textSize="40dp"
            android:text="x"
            android:layout_height="80dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/containerButtons4"
        android:layout_below="@id/containerButtons3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sea"
        android:layout_marginTop="10dp">

        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/btn_0"
            android:textSize="40dp"
            android:textColor="@android:color/white"
            android:background="@color/sea"
            android:text="0"
            android:layout_height="80dp" />

        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/btn_add"
            android:background="@color/sea"
            android:text="+"
            android:textSize="40dp"
            android:layout_height="80dp" />

        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/btn_sub"
            android:background="@color/sea"
            android:textSize="40dp"
            android:text="-"
            android:layout_height="80dp" />

        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/btn_equals"
            android:background="@color/sea"
            android:textSize="40dp"
            android:text="="
            android:layout_height="80dp" />
    </LinearLayout>
</RelativeLayout>
